{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "target": "ES2022",
    "types": ["jest", "node"],
    "paths": {
      "@igus-accelerator-injection-molding-configurator/services": [
        "apps/iaimc-frontend/src/app/services/index.ts"
      ],
      "@igus-accelerator-injection-molding-configurator/libs/shared": [
        "libs/shared/src/index.ts"
      ],
      "@igus-accelerator-injection-molding-configurator/ui-components": [
        "libs/ui-components/src/index.ts"
      ]
    }
  },
  "files": ["src/test-setup.ts"],
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "../shared/services/__tests__/local-storage.service.spec.ts"
  ]
}
