commit_types="feat|fix|style|refactor|test|chore"
ticket_pattern="IAIMC-[0-9]+"
commit_regex='^(${commit_types})\(${ticket_pattern}\): .*$'
commit_message=$(cat "$1")
if ! echo "$commit_message" | grep -qE "$commit_regex"; then
    echo "ERROR: Commit message does not follow the required format."
    echo "Please follow the format: <type>(<JIRA-TICKET>): <commit message>"
    echo "Valid types: $commit_types"
    echo "Example: feat(PROJ-123): add ability to parse arrays"
    exit 1
fi
