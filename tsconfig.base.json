{
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@igus-accelerator-injection-molding-configurator/services": [
        "apps/iaimc-frontend/src/app/services/index.ts"
      ],
      "@igus-accelerator-injection-molding-configurator/libs/shared": [
        "libs/shared/src/index.ts"
      ],
      "@igus-accelerator-injection-molding-configurator/ui-components": [
        "libs/ui-components/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
